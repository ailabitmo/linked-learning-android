<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:padding="8dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название модуля:"
            android:id="@+id/textView" android:layout_gravity="left|center_vertical" android:layout_margin="4dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/module_name" android:layout_gravity="left|center_vertical" android:layout_margin="4dp"
            android:textStyle="bold" android:textSize="20sp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Номер модуля:"
                android:id="@+id/textView" android:layout_gravity="left|center_vertical" android:layout_margin="4dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/module_number" android:layout_gravity="left|center_vertical" android:layout_margin="4dp"
                android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>